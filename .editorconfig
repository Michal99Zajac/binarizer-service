# Top-most EditorConfig file
root = true

# Rust source files
[*.rs]
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# TOML configuration files
[Cargo.toml]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = true
insert_final_newline = true

# JSON files
[*.json]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
